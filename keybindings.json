// Place your key bindings in this file to override the defaults
[
  // expand select automatically (via extention)
  {
    "key": "ctrl+=",
    "command": "expand_region",
    "when": "editorTextFocus"
  },
  // undo selection (via extention)
  {
    "key": "ctrl+-",
    "command": "undo_expand_region",
    "when": "editorHasSelection"
  },
  {
    "key": "ctrl+-",
    "command": "undo_expand_region",
    "when": "editorTextFocus"
  },
  // opens window explorer
  {
    "key": "ctrl+e",
    "command": "workbench.action.toggleSidebarVisibility",
  },
  {
    "key": "ctrl+e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "editorTextFocus"
  },
  // creates new file in window explorer
  {
    "command": "explorer.newFile",
    "key": "a",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // creates new folder in window explorer
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  // rename file in window explorer
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // copy file in window explorer
  {
    "command": "filesExplorer.copy",
    "key": "c",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // paste file in window explorer
  {
    "command": "filesExplorer.paste",
    "key": "p",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // delete file in window explorer
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // closes opened file
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor"
  },
  // save all for all files at once
  {
    "command": "-workbench.action.files.save",
    "key": "ctrl+s"
  },
  {
    "command": "saveAll",
    "key": "ctrl+s"
  },
  // split window into 2
  // {
  //   "command": "workbench.action.splitEditor",
  //   "key": "ctrl+d"
  // },

  // opens terminal
  {
    "command": "-workbench.action.splitEditor",
    "key": "ctrl+\\"
  },
  {
    "command": "workbench.action.terminal.toggleTerminal",
    "key": "ctrl+\\",
    "when": "terminal.active"
  },
  {
    "command": "-workbench.action.terminal.toggleTerminal",
    "key": "ctrl+`",
    "when": "terminal.active"
  },
  // controls terminal
  {
    "key": "shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "shift+a",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "shift+b",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // wraps element into emmet shortcut
  {
    "key": "ctrl+p",
    "command": "editor.emmet.action.wrapWithAbbreviation"
  },
  {
    "key": "ctrl+down",
    "command": "cursorMove",
    "args": {
      "to": "down",
      "by": "line",
      "value": 3 // Adjust the value to specify how many lines to move
    },
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+up",
    "command": "cursorMove",
    "args": {
      "to": "up",
      "by": "line",
      "value": 3 // Adjust the value to specify how many lines to move
    },
    "when": "textInputFocus && !editorReadonly"
  },
  // disables up down multicursor and enables line copy
  {
    "key": "ctrl+shift+alt+down",
    "command": "-cursorColumnSelectDown",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+alt+up",
    "command": "-cursorColumnSelectUp",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+shift+alt+up",
    "command": "editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+alt+down",
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  
]