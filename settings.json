{
    "json.validate.enable": true,      
    "errorLens.fontSize": "13",
    "errorLens.fontStyleItalic": true,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.fontSize": 16,
    "editor.tabSize": 2,
    "workbench.sideBar.location": "right",
    "workbench.reduceMotion": "on",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "extensions.ignoreRecommendations": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    //enables auto tag rename in HTML, Javascript, JSON 
    "editor.linkedEditing": true,
    "editor.wordWrap": "on",
    "javascript.preferences.renameMatchingJsxTags": true,
    "typescript.preferences.renameMatchingJsxTags": true,
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Shades of Purple (Super Dark)",
    "workbench.iconTheme": "vscode-icons",
    // "editor.mouseWheelZoom": true,
    "editor.lineNumbers": "relative",
    "files.autoSave": "onWindowChange",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.renderLineHighlight": "none",
    "workbench.layoutControl.type": "menu",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 7,
    "workbench.editor.limit.perEditorGroup": true,
    "explorer.openEditors.visible": 7,
    "workbench.activityBar.visible": false,
    // "editor.scrollbar.vertical": "hidden",
    // "editor.scrollbar.horizontal": "hidden",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}",
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.startupEditor": "none",
    "redhat.telemetry.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "terminal.integrated.cursorStyle": "block",
    "window.zoomLevel": 1,
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "liveServer.settings.CustomBrowser": "microsoft-edge",

    // "workbench.colorCustomizations": {
    //     "editor.selectionHighlightBackground": "#000000",
    //     "editor.lineHighlightBackground": "#000000",
    //     "editor.selectionBackground": "#000000",
    //     "editor.wordHighlightBackground": "#000000",
    //     "editorCursor.background": "#000000",
    //     "editorCursor.foreground": "#fad000"

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<Space>",

    "vim.normalModeKeyBindingsNonRecursive": [
    // Navigating or switching b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // Switching editor tabs (while staying in normal mode)
    { "before": ["<S-h>"], "commands": ["workbench.action.previousEditor"] },
    { "before": ["<S-l>"], "commands": ["workbench.action.nextEditor"] },

    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    
    // Enabling Tabs
    {
      "before": ["Tab"],
      "commands": ["tab"]
    },

    // panes
    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    
    // NICE TO HAVE
    { "before": ["leader", "w"], "commands": ["workbench.action.files.save"] },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    { "before": ["leader", "g"], "commands": ["editor.action.showHover"] },
    { "before": ["leader", "r"], "commands": ["editor.action.rename"] },
    { "after": ["^"], "before": ["<"] },
    { "after": ["$"], "before": [">"] },
  ],

  "vim.visualModeKeyBindings": [

    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    { "after": ["^"], "before": ["<"] },
    { "after": ["$"], "before": [">"] },
    
    {
      "before": ["Tab"],
      "commands": ["tab"]
    },

  ],

 "vim.insertModeKeyBindings": [
    {
      "before": ["i", "i"],
      "after": ["<Esc>"]
    }
  ],

  // Disables keys in vim 
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-v>": false,
    "<CR>": false
  },
    "vim.foldfix": true,
  }
